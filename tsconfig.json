{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "next-env.d.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/stats.js",
    "lib/serialize.js",
    "pages/api/productos.js",
    "pages/api/pedidos.js",
    "pages/api/clientes.js",
    "pages/api/categorias.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
